{
	"name": "ceuvel",
	"description": "",
	"license": "MIT",
	"scripts": {
		"build": "parallelshell 'yarn run clean' 'yarn run build:html' 'yarn run build:css' 'yarn run copy:fonts' 'yarn run copy' && yarn run build:js && yarn run build:jsStatic && yarn run build:objects",
		"start": "yarn run dev",
		"dev": "parallelshell 'yarn run clean' 'yarn run build:html' 'yarn run watch:js' 'yarn run watch:css' 'yarn run copy:fonts' 'yarn run watch:fonts' 'yarn run serve'  'yarn run copy' 'yarn run watch:img' 'yarn run watch:html' 'yarn run build:jsStatic' 'yarn run build:objects'",
		"clean": "rimraf ./dist/*",
		"copy": "copyfiles -u 1 ./src/img/**/** ./dist",
		"copy:fonts": "copyfiles -u 1 ./src/fonts/**/** ./dist",
		"build:html": "htmlprocessor ./src/*.html -o './dist/'",
		"build:js": "browserify ./src/index.js -t babelify | uglifyjs -cm > ./dist/bundle.js",
		"build:jsStatic": "cpy src/js/* dist/js",
		"build:objects": "cpy src/objects/* dist/objects",
		"build:css": "postcss --config './postcss.config.js' ./src/styles/styles.css -o ./dist/styles/styles.css --verbose",
		"watch:img": "onchange './src/img/*'  './src/img/**/**' -- yarn run copy",
		"watch:js": "watchify ./src/index.js -t babelify -o ./dist/bundle.js -v",
		"watch:css": "postcss --config './src/postcss.config.js' ./src/styles/styles.css -o ./dist/styles/styles.css --verbose -w",
		"watch:html": "onchange './src/*.html' -- yarn run build:html",
		"watch:fonts": "onchange './src/fonts/*' -- yarn run copy:fonts",
		"serve": "browser-sync start --no-open  --server -f './dist/*.html' './dist/styles/*' './dist/**/*' --ss ./dist --index ./dist/index.html"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-plugin-transform-async-to-generator": "^6.24.1",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.6.1",
		"babelify": "^8.0.0",
		"browser-sync": "^2.23.6",
		"browserify": "^16.1.1",
		"copyfiles": "^2.0.0",
		"cpy-cli": "^1.0.1",
		"cssnano": "^3.10.0",
		"htmlprocessor": "^0.2.6",
		"onchange": "^3.3.0",
		"parallelshell": "^3.0.2",
		"postcss-cli": "^5.0.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-custom-media": "^6.0.0",
		"postcss-discard-comments": "^2.0.4",
		"postcss-import": "^11.1.0",
		"postcss-modules": "^1.1.0",
		"postcss-nesting": "^4.2.1",
		"postcss-uncss": "^0.16.1",
		"rimraf": "^2.6.2",
		"uglify-js": "^3.3.22",
		"uncss": "^0.16.2",
		"watchify": "^3.11.0"
	},
	"dependencies": {
		"gsap": "^1.20.4"
	}
}
